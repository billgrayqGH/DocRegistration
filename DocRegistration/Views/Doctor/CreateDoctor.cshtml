@model DocRegistration.Models.Doctor

@{
    ViewBag.Title = "Bill Doctor Registration";
}




@using (Html.BeginForm("CreateDoctor", "Doctor", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="container login-container">
    <div class="row">
        <div class="col-md-8 login-form-1">
            <div class="text-container">
                <h2>
                    <img src="https://go2chandu.com/wp-content/uploads/2018/06/healthcare-icon.png" />
                    <span>BILL</span> DocReg
                </h2>

                <h3> TIME TO BE A DOCTOR</h3>
                <p>
                    Be the best doctor online cure any disease.

                    Why do we use it?
                    It is a long established fact that a reader will be distracted by the readable
                    content of a page when looking at its layout. The point of using Lorem Ipsum is
                    that it has a more-or-less normal distribution of letters, as opposed to using
                    'Content here, content here', making it look like readable English. Many desktop
                    publishing packages and web page editors now use Lorem Ipsum as their default model
                    text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy.
                    Various versions have evolved over the years, sometimes by accident, sometimes on purpose
                    (injected humour and the like).

                    Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a
                    piece of classical Latin literature from 45 BC, making it over 2000 years old. Lorem Ipsum
                    is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's 
                    standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled 
                    it to make a type specimen book. 


                </p>
                <ul class="list-group">
                    <li class="col-sm-4 list-group-item"><a href="#">ABOUT US</a></li>
                    <li class="col-sm-4 list-group-item"><a href="#">PRIVACY</a></li>
                    <li class="col-sm-4 list-group-item">@Html.ActionLink("DOCTOR RECORDS", "GetData", "Doctor")</li>
                </ul>
            </div>        
        </div>
        <div class="ipod">
            <div class="circle">
                WIN AN iPOD &reg;
            </div>
        </div>
        <div class="col-md-4 login-form-2">
            <h2>Be An Online Doctor Now!</h2>
            <h4>
                Register to be a virtual doctor online with no education needed (Totally Not Real).
            </h4>
            <hr />
            <p>Required fields are marked with an asterisk(*)</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.DoctorFirstName, "FIRST NAME", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoctorFirstName, new { htmlAttributes = new { @class = "form-control" } }) *
                    @Html.ValidationMessageFor(model => model.DoctorFirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DoctorLastName, "LAST NAME", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoctorLastName, new { htmlAttributes = new { @class = "form-control" } })*
                    @Html.ValidationMessageFor(model => model.DoctorLastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DoctorEmail, "EMAIL", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoctorEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DoctorEmail, "", new { @class = "text-danger" })*
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-push-4">
                    @Html.DropDownListFor(model => model.Specialty, new List<SelectListItem> {
                             new SelectListItem{ Text ="SPECIALTY", Value = ""},
                             new SelectListItem{ Text ="Adolescent Medicine", Value = "Adolescent Medicine"},
                             new SelectListItem{ Text ="Cardiovascular Disease", Value = "Cardiovascular Disease"},
                             new SelectListItem{ Text ="Child Neurology", Value = "Child Neurology"},
                             new SelectListItem{ Text ="Dermatology", Value = "Dermatology"},
                             new SelectListItem{ Text ="Pediatrics", Value = "Pediatrics"}

                                }, htmlAttributes: new { @class = "form-control"}) *

                    @Html.ValidationMessageFor(model => model.Specialty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="SUBMIT >>" class="btn btn-primary" />
                </div>
            </div>
            <br />
            <br />
            <p id="description">
                If you registered successfully, the message will show under or check the @Html.ActionLink("Doctor Records","GetData","Doctor")
            </p>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <p>
                        @ViewBag.SuccessMessage
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
    }



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</script>